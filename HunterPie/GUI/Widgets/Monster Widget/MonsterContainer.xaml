<src:Widget x:Class="HunterPie.GUI.Widgets.MonsterContainer"
            x:Name="MonsterWidget"
             xmlns:src="clr-namespace:HunterPie.GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="895" MinHeight="80" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStyle="None" AllowsTransparency="True" ShowInTaskbar="False" Topmost="True" Closing="OnClosing" Background="{x:Null}" MouseDown="OnMouseDown" MouseWheel="OnMouseWheel" SnapsToDevicePixels="True">
    <Grid>
        <StackPanel x:Name="Container" SnapsToDevicePixels="True" RenderTransformOrigin="0.5,0.5" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Center" Style="{StaticResource OVERLAY_MONSTER_BACKGROUND}"/>

        <TextBlock Text="{Binding ElementName=MonsterWidget, Path=DesignModeDetails}" Visibility="{Binding ElementName=MonsterWidget, Path=DesignModeDetailsVisibility}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="329" Height="26" Foreground="#FFEEEEEE" FontSize="13" Background="#CC191919"/>
    </Grid>
</src:Widget>
