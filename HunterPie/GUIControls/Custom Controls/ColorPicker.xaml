<UserControl x:Name="ColorPickerControl" x:Class="HunterPie.GUIControls.Custom_Controls.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="30"
             MouseDown="OnMouseDown" Cursor="Hand">
    <DockPanel>
        <TextBlock TextWrapping="Wrap" Text="{Binding Path=NameText, ElementName=ColorPickerControl}" Foreground="#FFF4F4F5" FontFamily="Segoe UI Light" FontSize="16" FontWeight="Light" TextAlignment="Right" Padding="0,8,10,0"/>
        <TextBlock x:Name="ColorHex" HorizontalAlignment="Right" TextWrapping="Wrap" Text="#FFFFFFFF" Foreground="#FFF4F4F5" FontFamily="Segoe UI Light" DockPanel.Dock="Right" Padding="5,7,5,0" Width="90" TextAlignment="Right"/>
        <Ellipse x:Name="ColorCircle" Fill="White" HorizontalAlignment="Right" Width="24" Height="24" DockPanel.Dock="Right"/>
    </DockPanel>
</UserControl>
