<UserControl x:Class="HunterPie.Logger.Debugger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <RichTextBox x:Name="Console" IsReadOnly="True" Background="#00000000" Foreground="#FFEEEEEE" BorderBrush="{x:Null}" VerticalScrollBarVisibility="Visible" UseLayoutRounding="False" AllowDrop="False" Block.LineHeight="1" HorizontalScrollBarVisibility="Disabled" FontSize="13" SelectionBrush="#FFC92C2C" TextOptions.TextHintingMode="Fixed" FontFamily="Roboto" BorderThickness="0" Margin="0"/>
        <Button Style="{StaticResource buttons_settings}" Cursor="Hand" FontFamily="Segoe UI" FontSize="13" FontWeight="Light" BorderBrush="{x:Null}" Foreground="{StaticResource GENERIC_BUTTON_FOREGROUND}"  Background="{StaticResource CONSOLE_HEADER_BACKGROUND}" Content="Clear" ToolTip="Clear console" HorizontalAlignment="Right" Width="42" Height="22" VerticalAlignment="Top" Click="OnClearConsoleButtonClick"/>
    </Grid>
</UserControl>
